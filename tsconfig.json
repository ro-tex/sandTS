{
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    "target": "esnext", // es6
    "module": "commonjs", // es2015
    "allowJs": true, // allow JS files to be compiled
    "declaration": true,
    "declarationDir": "./declarations",
    "watch": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "lib": [
      "es7",
      "dom",
      "es2020.string"
    ],
  },
  "exclude": [
    "declarations",
    "dist",
    "node_modules"
  ]
}
